<body>
        <h1>Your Active Tenders Are Following:</h1>
        <hr>
       {{#each Bid}}
        <div class="bid_info" style="  width: 60%; padding: 1.2rem; margin-left: 1rem; margin-top: 1rem; background-color:#F7F6FB; box-shadow: 0 1.4rem 8rem rgba(0,0,0,0.2);">
